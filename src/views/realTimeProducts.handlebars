<div>
    <h2>AGREGAR PRODUCTO</h2>
    <form action="/realtimeproducts/agregarproducto" method="post">
        <input type="text" name="title" placeholder="nombre del producto">
        <input type="text" name="description" placeholder="descripcion">
        <input type="text" name="category" placeholder="categoria">
        <input type="number" name="stock" placeholder="stock">
        <input type="number" name="price" placeholder="precio">
        <input type="text" name="code" placeholder="SKU">
        <input type="text" name="thumbnail" placeholder="ruta para archivo de imagen (opcional)">
        <label>
            <input type="checkbox" name="status"> Estado (opcional)
        </label>
        <button type="submit">AGREGAR</button>
    </form>
</div>
<div>
    <h2>ELIMINAR PRODUCTO</h2>
    <P>Para eliminar un producto, ingrese el id del producto.</P>
    <form action="/realtimeproducts/eliminarproducto" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="number" name="id" placeholder="id del producto a eliminar">
        <button type="submit">ELIMINAR</button>
    </form>
</div>
<div>
    <h3>LISTA DE PRODUCTOS</h3>
    <ul>
        {{#each products}}
        <li>
            <h2>{{this.title}}</h2>
            <p>id: {{this.id}}</p>
        </li>
        {{/each}}
    </ul>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/index.js"></script>